{
  // ai settings
  "edit_predictions": {
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/.dev.vars",
      "**/secrets.yml"
    ],
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    }
  },
  "agent": {
    "default_profile": "write",
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-haiku-4-5"
    },
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-haiku-4-5"
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },

  // extensions
  "auto_install_extensions": {
    "basher": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "csv": true,
    "docker-compose": true,
    "dockerfile": true,
    "env": true,
    "git-firefly": true,
    "gosum": true,
    "html": true,
    "ini": true,
    "latex": true,
    "log": true,
    "lua": true,
    "make": true,
    "markdown-oxide": true,
    "neocmake": true,
    "nginx": true,
    "nix": true,
    "nu": true,
    "proto": true,
    "ruff": true,
    "sql": true,
    "terraform": true,
    "toml": true,
    "xml": true,
    "zig": true,
    "kdl": true
  },

  // editor settings
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },
  "terminal": {
    "shell": {
      "program": "nu"
    }
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 15,
  "cursor_blink": false,
  "hide_mouse": "on_typing",
  "scroll_beyond_last_line": "off",
  "file_types": {
    "CMake": ["CMakeLists.txt", "cmake"],
    "Dockerfile": ["Dockerfile*"]
  },
  "icon_theme": {
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Latte",
    "mode": "dark"
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "editor_width"
    },
    "Go": {
      "soft_wrap": "editor_width",
      "tab_size": 4
      // "hard_tabs": true
    },
    "Nix": {
      "formatter": {
        "external": {
          "command": "nixfmt"
        }
      }
    },
    "Python": {
      "tab_size": 4
    },
    "Zig": {
      "tab_size": 4
    },
    "Nu": {
      "tab_size": 4
    }
  },
  "load_direnv": "shell_hook",
  "theme": {
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Mocha",
    "mode": "dark"
  },
  "ui_font_size": 15,
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "highlight_on_yank_duration": 400
  }
}
